<resources>
    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/pure_white</item>
        <item name="colorPrimaryVariant">@color/mist</item>
        <item name="colorPrimaryDark">@color/mist</item>

        <item name="backgroundColor">@color/pine_green</item>

        <item name="colorSecondary">@color/jungle_green</item>
        <item name="colorSecondaryVariant">@color/downy_green</item>
        <item name="colorOnPrimary">@color/pure_black</item>
        <item name="colorAccent">@color/jungle_green</item>

        <item name="bottomNavigationStyle">
            @style/Widget.MaterialComponents.BottomNavigationView.Colored
        </item>

        <item name="android:windowLightStatusBar">true</item>
    </style>


    <style name="ThemeOverlay.App.ToggleButtonGroupStyle" parent="">
        <item name="colorPrimary">@color/pure_black</item>
    </style>

    <style name="Theme.App.AlertDialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:textColor">@color/pure_black</item>
        <item name="colorPrimary">@color/pure_white</item>
        <item name="buttonBarButtonStyle">@style/Theme.App.AlertDialogTheme.ButtonStyle</item>
    </style>

    <style name="Theme.App.AlertDialogTheme.ButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>



</resources>